<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ics466uhm.transit808" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Home"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ArrivalActivity"
            android:label="@string/title_activity_arrival" >
        </activity>
        <activity
            android:name=".BusStopSearchActivity"
            android:label="@string/title_activity_bus_stop_search"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".StopDetails"
            android:label="@string/title_activity_stop_details" >
        </activity>
    </application>

</manifest>
